{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
  ],
  "exclude": [
    "typings/index.d.ts",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": true,
  "atom": { "rewriteTsconfig": false }
}
